<div>
<h1><%= @cocktail.name %></h1>

<ul>
<p>
    <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.ingredient.name %> | <%= dose.description %>
    <%= link_to dose_path(dose), method: :delete,
    data: { confirm: "you sure?" } do %>
      <i class="far fa-trash-alt"></i></li>
      <% end %>
  <% end %>
</p>
</ul>

<%= link_to 'add dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'back to index', cocktails_path %>
</div>
